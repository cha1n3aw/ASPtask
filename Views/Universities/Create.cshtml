@model ASPtask.Models.University

@{
    ViewData["Title"] = "Create";
}

<h1>Create university</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UniversityName" class="form-control" placeholder="University Name"/>
                <span asp-validation-for="UniversityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UniversityPoints" class="form-control" placeholder="University Points"/>
                <span asp-validation-for="UniversityPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-outline-primary" />
                <input type="button" value="Go Back" class="btn btn-outline-danger" onclick="location.href='@Url.Action("AdminPanel", "Home")'" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
