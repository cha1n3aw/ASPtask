@model ASPtask.Models.University

@{
    ViewData["Title"] = "Details";
}

<h1>Details on University</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            University Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UniversityName)
        </dd>
        <dt class="col-sm-2">
            University Points:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UniversityPoints)
        </dd>
    </dl>
    <input type="button" value="Edit" class="btn btn-outline-primary" onclick="location.href='@Url.Action("Edit", "Universities", new { id=Model.UniversityID})'" />
    <input type="button" value="Go Back" class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "Universities")'" />
</div>