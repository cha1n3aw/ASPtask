@model ASPtask.Models.Question

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Question</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Question:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionContents)
        </dd>
        <dt class = "col-sm-2">
            Has Options:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HasOptions)
        </dd>
        <dt class = "col-sm-2">
            Multiple Selection:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MultipleSelect)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" onclick="location.href='@Url.Action("DeleteConfirmed", "EditSurvey", new { id=Model.ID })'" />
        <input type="button" value="Go Back" class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "EditSurvey")'" />
    </form>
</div>
