@model ASPtask.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details on the Student</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            First Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Course:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course)
        </dd>
        <dt class="col-sm-2">
            University ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UniversityID)
        </dd>
    </dl>
    <input type="button" value="Edit" class="btn btn-outline-primary" onclick="location.href='@Url.Action("Edit", "Students", new { id=Model.StudentID})'" />
    <input type="button" value="Go Back" class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "Students")'" />
</div>
