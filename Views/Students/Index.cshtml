@model IEnumerable<ASPtask.Models.Student>

@{
    ViewData["Title"] = "List";
}

<h1>List of Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name:
            </th>
            <th>
                Last Name:
            </th>
            <th>
                E-Mail:
            </th>
            <th>
                Course:
            </th>
            <th>
                University:
            </th>
            <th>
                Answers:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniversityID)
            </td>
            <td>
                @if (item.Answers != null) foreach (var answer in item.Answers)
                    {

                        @Html.DisplayFor(modelItem => answer.Key);
                        <label> : </label>
                        @Html.DisplayFor(modelItem => answer.Value);
                        <br>
                    }
                else
                {
                    <label> EMPTY </label>
                }
            </td>
            <td>
                <input type="button" value="Edit" class="btn btn-outline-warning" onclick="location.href='@Url.Action("Edit", "Students", new { id=item.StudentID })'" />
                <input type="button" value="Details" class="btn btn-outline-dark" onclick="location.href='@Url.Action("Details", "Students", new { id=item.StudentID })'" />
                <input type="button" value="Delete" class="btn btn-outline-danger" onclick="location.href='@Url.Action("Delete", "Students", new { id=item.StudentID })'" />
            </td>
        </tr>
}
    </tbody>
</table>
<div class="form-group">
    <input type="button" value="Add" class="btn btn-outline-primary" onclick="location.href='@Url.Action("AddNewStudentEntry", "Students")'" />
</div>