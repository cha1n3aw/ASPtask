@model IEnumerable<ASPtask.Models.University>

@{
    ViewData["Title"] = "University Ranking";
}

<h1>University Ranking</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Rank:
            </th>
            <th>
                University:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model.OrderByDescending(university => university.UniversityID))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UniversityName)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.UniversityPoints)
                </th>
                <td>
                    <input type="button" value="Edit" class="btn btn-outline-warning" onclick="location.href='@Url.Action("Edit", "Universities", new { id=item.UniversityID })'" />
                    <input type="button" value="Details" class="btn btn-outline-dark" onclick="location.href='@Url.Action("Details", "Universities", new { id=item.UniversityID })'" />
                    <input type="button" value="Delete" class="btn btn-outline-danger" onclick="location.href='@Url.Action("Delete", "Universities", new { id=item.UniversityID })'" />
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <input type="button" value="Add" class="btn btn-outline-primary" onclick="location.href='@Url.Action("Create", "Universities")'" />
</div>
