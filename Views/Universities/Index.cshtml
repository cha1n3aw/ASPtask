@model IEnumerable<ASPtask.Models.University>

@{
    ViewData["Title"] = "University Ranking";
}

<h1>University Ranking</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UniversityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UniversityPoints)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniversityName)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.UniversityPoints)
            </th>
            <td>
                <!--
                <a asp-action="Edit" asp-route-id="@item.UniversityID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UniversityID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UniversityID">Delete</a>
                -->
            </td>
        </tr>
}
    </tbody>
</table>
