@model ASPtask.Models.University

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete University</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            University Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UniversityName)
        </dd>
        <dt class="col-sm-2">
            University Points:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UniversityPoints)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="UniversityID" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" onclick="location.href='@Url.Action("DeleteConfirmed", "Universities", new { id=Model.UniversityID })'" />
        <input type="button" value="Go Back" class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "Universities")'" />
    </form>
</div>