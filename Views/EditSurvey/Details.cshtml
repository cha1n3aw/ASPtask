@model ASPtask.Models.Question

@{
    ViewData["Title"] = "Details";
}

<h1>Details on Question</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Question:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionContents)
        </dd>
        <dt class="col-sm-2">
            Has Options:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HasOptions)
        </dd>
        <dt class="col-sm-2">
            Multiple Selection:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MultipleSelect)
        </dd>
    </dl>
    <input type="button" value="Edit" class="btn btn-outline-primary" onclick="location.href='@Url.Action("Edit", "EditSurvey", new { id=Model.ID})'" />
    <input type="button" value="Go Back" class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "EditSurvey")'" />
</div>
